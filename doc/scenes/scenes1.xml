<scene>

	<!-- mandatory -->
	<camera>
		<pos>10, 5, 60</pos>
		<look_at>0, 0, 5</look_at>
	</camera>
	<!-- mandatory -->
	<background>BLACK</background>
	<!-- if absent amb_color = 0 amb_intensity = 0 -->
	<amb_color>WHITE</amb_color>
	<amb_intensity>1</amb_intensity>
	<!-- if absent aa = INACTIVE_AA -->
	<antialiasing>ACTIVE_AA</antialiasing>
	<!-- if absent scene->effect = INACTIVE -->
	<effect>SEPIA</effect>

	<!-- 1 object or more mandatory -->
	<objects>

		<object>
			<type>SPHERE</type>
			<color>ORANGE</color>
			<material>GLASS</material>
			<sphere>
				<axis>0, 10, -3</axis>
				<pos>0, 10, 0</pos>
				<r>5.2</r>
			</sphere>
			<limits>
				<min>0, 1, 0</min>
				<max>0, 1, 0</max>
			</limits>
		</object>

		<object>
			<type>PLANE</type>
			<color>WHITE</color>
			<material>PLASTIC</material>
			<plane>
				<normal>0, 1, 0</normal>
				<offset>0</offset>
				<style>CHECK</style>
			</plane>
			<limits>
				<min>0, 1, 0</min>
				<max>0, 1, 0</max>
			</limits>
		</object>

		<object>
			<type>CYLINDER</type>
			<color>BLUE</color>
			<material>BASIC</material>
			<cylinder>
				<axis>0, 1, 0</axis>
				<pos>40, 20, 25</pos>
				<r>100</r>
			</cylinder>
			<limits>
				<min>0, 1, 0</min>
				<max>0, 1, 0</max>
			</limits>
		</object>

		<object>
			<type>CONE</type>
			<color>RED</color>
			<material>PERLIN</material>
			<cone>
				<axis>0, 1, 0</axis>
				<apex>40, 20, 0</apex>
				<angle>20</angle>
			</cone>
			<limits>
				<min>0, 1, 0</min>
				<max>0, 1, 0</max>
			</limits>
		</object>

	</objects>

	<!-- 1 light or more mandatory -->
	<lights>

		<light>
			<!-- spot will be rename to point or light_point -->
			<type>SPOT</type>
			<intensity>5</intensity>
			<color>WHITE</color>
			<vector>15, 12, 20</vector>
		</light>

		<light>
			<type>DIR</type>
			<intensity>5</intensity>
			<color>WHITE</color>
			<vector>15, 12, 20</vector>
		</light>

	</lights>

</scene>
