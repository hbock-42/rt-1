<scene>

	<camera>
		<pos>0, 10, 100<pos>
		<dir>0, 0, -1<dir>
	</camera>
	<background>BLACK</background>
	<amb_color>WHITE</amb_color>
	<amb_intensity>1</amb_intensity>
	<objects>

		<object>
			<type>SPHERE</type>
			<color>BLUE</color>
			<material>BASIC</material>
			<sphere>
				<pos>-5, 15, 10</pos>
				<r>10</r>
			</sphere>
		</object>


		<object>
			<type>PLANE</type>
			<color>WHITE</color>
			<material>BASIC</material>
			<plane>
				<normal>0, 1, 0</normal>
				<offset>0</offset>
				<style>NORMAL</style>
			</plane>
		</object>

		<object>
			<type>CYLINDER</type>
			<color>BLUE</color>
			<material>BASIC</material>
			<cylinder>
				<axis>0, 10, -3</axis>
				<pos>-50, 20, -25</pos>
				<r>10</r>
			</cylinder>
		</object>

		<object>
			<type>CONE</type>
			<color>CYAN</color>
			<material>PLASTIC</material>
			<cone>
				<axis>0, 2, -1</axis>
				<apex>40, 20, -25</apex>
				<angle>30</angle>
			</cone>
		</object>

	</objects>

	<!-- 1 light or more mandatory -->
	<lights>

		<light>
			<!-- spot will be rename to point or light_point -->
			<type>SPOT</type>
			<intensity>1</intensity>
			<color>WHITE</color>
			<spot>
				<pos>-100, 75, 50<pos>
			</spot>
		</light>

		<light>
			<type>DIR</type>
			<intensity>1</intensity>
			<color>WHITE</color>
			<dir>
				<pos>0, -1, -1<pos>
			</dir>
		</light>

	</lights>

</scene>
